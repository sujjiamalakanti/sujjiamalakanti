#include<stdio.h>
int main()
{
    int i,count=1;
    char str[50];
    printf("enter a string :");
    scanf("%[^\n]s",str);
    for(i=0;str[i]!='\0';i++)
    {
        if(str[i]==' ')
        count++;
    }
    printf("no.of words = %d",count);
    return 0;
    }
    
    Enter a string:aditya college
    no of words:2
